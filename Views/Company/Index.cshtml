    <div class="reminders">
        <div class="header">
            <i class='bx bx-note'></i>
            <h3>Lorem</h3>
            <i class='bx bx-filter'></i>
            <i class='bx bx-plus'></i>
        </div>
        <ul class="task-list">
            <li class="completed">
